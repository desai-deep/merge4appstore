# App Store Connect API credentials (required for both scripts)
APP_STORE_CONNECT_API_KEY_ID=
APP_STORE_CONNECT_ISSUER_ID=
APP_STORE_CONNECT_API_KEY_CONTENT=

# iOS repo path (required for ios-release-sync.js to create tags)
IOS_REPO_PATH=/path/to/your/ios-repo

# GitHub token for PR comments (required for gh CLI)
GH_TOKEN=

# App configuration (optional - defaults shown)
# APP_BUNDLE_ID=com.example.myapp
# APP_NAME=My App
# GITHUB_REPO_OWNER=my-org
# GITHUB_REPO_NAME=my-ios-repo
# XCODE_WORKFLOW_NAME=Publish to App Store

# Dry run mode (optional)
# DRY_RUN=true
